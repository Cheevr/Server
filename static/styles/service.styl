/*
 * Icon Fonts
 * @source https://material.io/icons/
 */

@font-face
  font-family 'Material Icons'
  font-style normal
  font-weight 400
  // TODO move to static.cheevr.net (once it exists)
  src:
    local('Material Icons'),
    local('MaterialIcons-Regular'),
    url(../img/MaterialIcons.woff2) format('woff2'),
    url(../img/MaterialIcons.woff) format('woff'),
    url(../img/MaterialIcons.ttf) format('truetype')

.material
  font-family 'Material Icons'
  font-weight normal
  font-style normal
  font-size 24px
  line-height 1
  letter-spacing normal
  text-transform none
  display inline-block
  white-space nowrap
  word-wrap normal
  direction ltr
  -webkit-font-feature-settings 'liga'
  -webkit-font-smoothing antialiased


/**
 * Social Media Fonts
 * @source http://drinchev.github.io/monosocialiconsfont/
 */

@font-face
  font-family 'Mono Social Icons Font'
  src:
    url(../img/MonoSocialIconsFont.woff2) format('woff2'),
    url(../img/MonoSocialIconsFont.woff) format('woff'),
    url(../img/MonoSocialIconsFont.ttf) format('truetype')
  font-weight normal
  font-style normal

.symbol
  font-family 'Mono Social Icons Font'
  -webkit-text-rendering optimizeLegibility
  -moz-text-rendering optimizeLegibility
  -ms-text-rendering optimizeLegibility
  -o-text-rendering optimizeLegibility
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-font-smoothing antialiased
  -ms-font-smoothing antialiased
  -o-font-smoothing antialiased
  font-smoothing antialiased
  font-style normal
  font-size 24px
  &:before
    content attr(title)
    margin-right 0.3em
    font-size 130%


/**
 * Service Styles
 */

#feedback, #alerts
  text-align center
  font-family Verdana, Arial, Sans-Serif
  padding 50px
  margin 0
  background #fff
  textarea, button, input
    font-size 14px
    background #fff
    border 1px solid #fff
    border-radius 2px
    box-shadow 0 0 10px #ccc
    display block
    padding 10px
    &:disabled
      cursor not-allowed
  button
    cursor pointer
    padding 10px 20px
  h2
    font-weight normal
    margin-left 0
    text-align left
    .material
      font-size 20px
      margin-right 10px
      vertical-align bottom
      width 20px

#feedbackButton
  background #fff
  border 1px solid #eee
  bottom 18px
  box-shadow 0 0 10px #ccc
  color #444
  cursor pointer
  display none
  font-size 12px
  font-weight bold
  font-family monospace
  padding 5px 50px
  position fixed
  right -50px
  transform rotate(-45deg)

#feedback
  display none
  .overlay
    background rgba(0, 0, 0, 0.7)
    height 100%
    left 0
    position fixed
    top 0
    width 100%
  .box
    color #444
    background #fff
    border 1px solid #fff
    border-radius 2px
    bottom 4px
    box-shadow 3px 3px 10px #aaa
    position fixed
    right 4px
    width 450px
    z-index 100
    padding 0 20px 20px
    h2
      font-size 20px
  input
    margin-bottom 10px
    width 300px
  textarea
    height 150px
    margin-bottom 20px
    width 100%
  .submit
    float right
  .cancel
    float left

#alerts
  display none
  height 100%
  left 0
  padding 20px
  position fixed
  text-align center
  top 0
  width 100%
  background rgba(0, 0, 0, 0.7)
  &.open
    display inherit
    z-index 101
  .alert
    background #fff
    border 1px solid #fff
    border-radius 3px
    box-shadow 4px 4px 20px #ccc
    display none
    margin 18% auto 0
    max-width 600px
    max-height 300px
    padding 10px 30px 35px
  .message
    font-size 14px
    max-height 60px
    overflow-x auto
    padding 10px 20px 0
    margin-bottom 30px
    text-align left
  input
    width 100%
  .buttons
    margin-top 25px
    height 30px
  .cancel
    float left
  .confirm
    float right

body, input, button, textarea
  &.service
    text-align center
    font-family Verdana, Arial, Sans-Serif
    padding 50px
    margin 0
    background #fff
    border solid 50px #8ad
  &.highlighting
    cursor crosshair

#feedbackButton
  background #fff
  border 5px solid #666
  bottom 10px
  color #444
  cursor pointer
  font-size 12px
  font-weight bold
  font-family monospace
  padding 3px 50px
  position fixed
  right -60px
  transform rotate(-45deg)

#feedbackBox
  color #444
  background #fff
  border 1px solid #fff
  border-radius 2px
  bottom 4px
  box-shadow 3px 3px 10px #aaa
  display none
  height 210px
  position fixed
  right 4px
  width 300px
  z-index 100
  textarea
    border 1px solid #333
    border-radius 3px
    height 110px
    margin 0 10px 15px
    width 90%
  button
    background #fff
    border 1px solid #333
    border-radius 3px
    display block
    position absolute

#feedbackSubmit
  right 15px

#feedbackCancel
  left 15px

.feedback
  outline 3px dashed #333
  &.highlighted
    outline 2px dashed #a33

.highlighted
  outline 2px dashed #3a3